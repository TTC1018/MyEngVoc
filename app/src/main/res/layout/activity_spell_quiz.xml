<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_targetdic"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".vocquiz.SpellQuizActivity">

    <TextView
        android:id="@+id/sQuizMeanText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:padding="20dp"
        android:text="뜻"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="45sp" />

    <LinearLayout
        android:id="@+id/sQuizHintLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="첫글자"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sQuizFirstSpell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:text="확인"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="글자수(공백포함)"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sQuizSpellCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:text="확인"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/sQuizSpellInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:backgroundTint="@color/white"
            android:textCursorDrawable="@null"
            android:text="@null"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/sQuizNextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/next_button" />

            <ImageButton
                android:id="@+id/sQuizSkipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/answer_button" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>