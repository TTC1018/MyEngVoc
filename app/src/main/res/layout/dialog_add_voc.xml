<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_radius">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="center"
        android:background="@drawable/gradient_dialog_head"
        android:text="단어 추가"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="?attr/colorPrimary" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/vocWordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:hintTextColor="?attr/colorOnPrimary"
        app:boxBackgroundColor="?attr/colorPrimary"
        app:boxStrokeColor="?attr/colorOnPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/Widget.AppTheme.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:nextFocusDown="@id/vocMeanEditText"
            android:hint="단어"
            android:ems="10"
            android:maxLength="15"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/vocMeanEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:hintTextColor="?attr/colorOnPrimary"
        app:boxBackgroundColor="?attr/colorPrimary"
        app:boxStrokeColor="?attr/colorOnPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/Widget.AppTheme.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:nextFocusDown="@id/vocAddOKBtn"
            android:hint="뜻"
            android:ems="10"
            android:maxLength="15"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/vocAddBtnLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vocAddCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="취소"
            android:textColor="?attr/colorOnPrimary" />

        <Button
            android:id="@+id/vocAddOKBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="확인"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

</LinearLayout>