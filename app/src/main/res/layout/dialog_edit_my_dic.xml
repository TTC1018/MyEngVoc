<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_radius">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="center"
        android:background="@drawable/gradient_dialog_head"
        android:text="단어장 이름 수정"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="?attr/colorPrimary" />

    <EditText
        android:id="@+id/dicNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="단어장 이름"
        android:textColor="?attr/colorOnPrimary"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/diaBtnLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/diaCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="취소"
            android:textColor="?attr/colorOnPrimary" />

        <Button
            android:id="@+id/diaOKBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:text="확인"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

</LinearLayout>